<h1>NBA Games</h1>

<table>
  <thead>
    <tr>
    	<th>Date</th>
      <th>Home Team</th>
      <th>Away Team</th>
    </tr>
  </thead>

  <tbody>
  	<% @games.each do |game| %>
	    <tr align="center">
	    	<% if game.date >= Date.today() %>
	      <td><%= game.date.strftime("%b %d, %Y") %></td>
	      <td><%= game.home_city + ' ' + game.home_team %></td>
	      <td><%= game.away_city + ' ' + game.away_team%></td>
	    	<% end %>
	    </tr>

	    <% end %>
  </tbody>
</table>